<!--                    android:text="Delete"-->
<!--                    android:padding="4dp" />-->
<!--            </TableRow>-->
        </TableLayout>


        <Button
            android:id="@+id/editAccommodationDefinition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Definition Accommodation"
            android:padding="12dp" />

