<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/base_navigation"
    app:startDestination="@+id/nav_products"
    >
    <fragment
        android:id="@+id/nav_products"
        android:name="com.example.shopapp.fragments.accomodations.AccomodationsPageFragment"
        android:label="Accomodations"
        tools:layout="@layout/fragment_products_page"
        />

    <fragment
        android:id="@+id/nav_new"
        android:name="com.example.shopapp.fragments.guest.reservations.myReservations.MyReservationListFragment"
        android:label="New product"
        tools:layout="@layout/fragment_my_reservation_list_list"
        />

    <fragment
        android:id="@+id/nav_profile"
        android:name="com.example.shopapp.fragments.profile.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile"/>

    <activity
        android:id="@+id/nav_logout"
        android:name="com.example.shopapp.activities.Login.LoginActivity"
        android:label="Login"
        tools:layout="@layout/activity_login" />

    <fragment
        android:id="@+id/nav_settings"
        android:name="com.example.shopapp.fragments.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings"
        app:popUpTo="@+id/nav_products"
        app:popUpToInclusive="true"
        />

    <fragment
        android:id="@+id/nav_language"
        android:name="com.example.shopapp.fragments.SettingsFragment"
        android:label="Language"
        tools:layout="@layout/fragment_settings"
        app:popUpTo="@+id/nav_products"
        app:popUpToInclusive="true"
        />

    <fragment
        android:id="@+id/nav_edit_profile"
        android:name="com.example.shopapp.fragments.profile.EditProfileFragment"
        android:label="Edit Profile"
        tools:layout="@layout/fragment_edit_profile" />

    <fragment
        android:id="@+id/nav_requests"
        android:name="com.example.shopapp.fragments.guest.reservations.RequestFragment"
        android:label="Requests"
        tools:layout="@layout/fragment_request" />
    <activity
        android:id="@+id/nav_accommodations"
        android:name="com.example.shopapp.activities.HostScreen.AddAccommodationScreen"
        android:label="Add Accommodation"
        tools:layout="@layout/activity_add_accommodation" />

</navigation>